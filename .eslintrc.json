{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "prettier/react",
    "eslint:recommended",
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "react/jsx-uses-react": ["off"],
    "react/react-in-jsx-scope": ["off"],
    "react/jsx-props-no-spreading": ["warn"],
    "react/function-component-definition": [
      2,
      { "namedcomponents": "arrow-function" }
    ],
    "no-shadow": "off"
  }
}
